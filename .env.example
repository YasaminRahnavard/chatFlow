# Docker Chat Platform Environment Variables
# Copy this file to .env and fill in your actual values

# AI Service Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
POSTGRES_DB=chatdb
POSTGRES_USER=chatuser
POSTGRES_PASSWORD=chatpass123
DATABASE_URL=postgresql://chatuser:chatpass123@postgres-db:5432/chatdb

# Redis Configuration
REDIS_URL=redis://redis-cache:6379/0
REDIS_PASSWORD=redispass123

# Django Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,api-server
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://web-ui:3000

# Frontend Configuration
NODE_ENV=production
REACT_APP_API_URL=http://localhost:8000
REACT_APP_AI_URL=http://localhost:8001

# Monitoring (Optional)
LOG_LEVEL=INFO
MAX_TOKENS=1000
TEMPERATURE=0.7

# Docker Configuration
COMPOSE_PROJECT_NAME=docker-chat-platform
COMPOSE_FILE=docker-compose.yml 